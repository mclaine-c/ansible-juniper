        secure_dhcp_gw: "10.33.2.1"
        voice_cidr: "10.33.1.0/24"
        secure_cidr: "10.33.2.0/24"
        
  tasks:      
    - name: Build base access switch config template
      template: src=template/junos_base_config.set.j2 dest={{build_dir}}/junos_base_config.set
